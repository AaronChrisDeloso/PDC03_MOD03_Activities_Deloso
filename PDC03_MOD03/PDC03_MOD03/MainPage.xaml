<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MOD03.MainPage">

    <StackLayout Margin="10">
        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="15">
            <Label Text="Welcome to PDC03 Module 3 Activities!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Frame BackgroundColor="#2196F3" CornerRadius="15">
            <StackLayout>
                <Button Clicked="Activity01" Text="Activity 1 : Stack Layout" BackgroundColor="LightBlue" CornerRadius="25"/>
                <Button Clicked="Activity02" Text="Activity 2 : Stack Layout and Frame" BackgroundColor="LightBlue" CornerRadius="25"/>
                <Button Clicked="Activity03" Text="Activity 3 : Grid" BackgroundColor="LightBlue" CornerRadius="25"/>
                <Button Clicked="Activity04" Text="Activity 4 : Absolute Layout" BackgroundColor="LightBlue" CornerRadius="25"/>
                <Button Clicked="Activity05" Text="Activity 5 : Relative Layout" BackgroundColor="LightBlue" CornerRadius="25"/>
                <Button Clicked="Activity06" Text="Activity 6 : Display Image" BackgroundColor="LightBlue" CornerRadius="25"/>
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>
